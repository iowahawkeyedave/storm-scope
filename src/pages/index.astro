---
import Layout from '../components/shared/Layout.astro'
import { MetricForm } from '../components/analyzer/MetricForm'
import { ErrorBoundary } from '../components/shared/ErrorBoundary'
---

<Layout
  title="Storm Scope | Analyzer"
  description="Use Storm Scope to input atmospheric metrics and estimate tornado, hail, and wind potential from severe weather setups."
>
  <section class="space-y-2">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 md:text-4xl">Severe Weather Setup Analyzer</h1>
    <p class="max-w-2xl text-sm text-slate-700 md:text-base">
      Provide atmospheric metrics to estimate tornado, hail, and wind potential from this setup.
    </p>
  </section>

  <div class="mt-6">
    <ErrorBoundary client:load fallbackTitle="Analyzer temporarily unavailable.">
      <MetricForm />
    </ErrorBoundary>
  </div>
</Layout>
